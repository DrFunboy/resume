<?xml version="1.0" encoding="utf-8"?>
<form>
  <AjaxForm>1</AjaxForm>
  <AllowedCapability>u::CAPABILITY_AI_TASK_EDIT;,u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <EditBtn>edit</EditBtn>
  <DropBtn>delete</DropBtn>
  <FormID>select</FormID>
  <GroupID>ai_tasks_ai_models</GroupID>
  <Label>Модели ИИ</Label>
  <Menu_item>1</Menu_item>
  <Name>select</Name>
  <PerPage>100</PerPage>
  <SQLselect>
    SELECT alm.ID, am.Name AS ModelName FROM ai_tasks_ai_models alm
    LEFT JOIN ai_models am ON am.ID = alm.AIModelID
    WHERE alm.TaskID = '@id;'
  </SQLselect>
  <SubmitBtn>1</SubmitBtn>
  <Inputs>
    <Label>Название модели</Label>
    <Name>ModelName</Name>
    <Type>2</Type>
  </Inputs>
</form>