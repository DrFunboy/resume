<?xml version="1.0" encoding="utf-8"?>
<form>
  <AjaxForm>1</AjaxForm>
  <AllowedCapability>u::CAPABILITY_AI_TASK_EDIT;,u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <FormID>edit</FormID>
  <GroupID>ai_tasks_ai_models</GroupID>
  <Label>Редактировать</Label>
  <Name>edit</Name>
  <Redirect>type=ai_tasks_ai_models&amp;act=select&amp;id=@masterid;</Redirect>
  <SQL>UPDATE ai_tasks_ai_models SET AIModelID='@AIModelID;' WHERE ID='@id;'</SQL>
  <SQLselect>
    SELECT * FROM ai_tasks_ai_models WHERE ID='@id;'
  </SQLselect>
  <SubmitBtn>1</SubmitBtn>
  <SuccessMsg>Успешно обновлено!</SuccessMsg>
  <Inputs>
    <Label>Модель</Label>
    <Name>AIModelID</Name>
    <Needed>1</Needed>
    <SQL>SELECT am.ID, am.Name FROM ai_models am WHERE am.active = 1</SQL>
    <Type>29</Type>
  </Inputs>
</form>
