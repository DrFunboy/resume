<?xml version="1.0" encoding="utf-8"?>
<form>
  <AjaxForm>1</AjaxForm>
  <AllowedCapability>u::CAPABILITY_AI_TASK_EDIT;,u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <EditBtn>edit</EditBtn>
  <DropBtn>delete</DropBtn>
  <FormID>select</FormID>
  <GroupID>ai_tasks_qc_calls_types</GroupID>
  <Label>Типы звонка</Label>
  <Menu_item>1</Menu_item>
  <Name>select</Name>
  <PerPage>100</PerPage>
  <SQLselect>
    SELECT atct.ID, ict.`Comment` AS CallTypeName FROM ai_tasks_qc_calls_types atct
    LEFT JOIN ip_calls_type ict ON ict.CallType = atct.CallTypeID
    WHERE atct.TaskID = '@id;'
  </SQLselect>
  <SubmitBtn>1</SubmitBtn>
  <Inputs>
    <Label>Тип звонка</Label>
    <Name>CallTypeName</Name>
    <Type>2</Type>
  </Inputs>
</form>