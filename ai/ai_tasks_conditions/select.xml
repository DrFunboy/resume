<?xml version="1.0" encoding="utf-8"?>
<form>
  <AjaxForm>1</AjaxForm>
  <AllowedCapability>u::CAPABILITY_AI_TASK_EDIT;,u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <EditBtn>edit</EditBtn>
  <DropBtn>delete</DropBtn>
  <FormID>select</FormID>
  <GroupID>ai_tasks_conditions</GroupID>
  <Label>Условия задачи</Label>
  <Menu_item>1</Menu_item>
  <Name>select</Name>
  <PerPage>100</PerPage>
  <SQLselect>
    SELECT atc.ID, ac.Name AS ConditionName
    FROM ai_tasks_conditions atc
    LEFT JOIN ai_conditions ac ON ac.ID = atc.ConditionID
    WHERE atc.TaskID = '@id;'
  </SQLselect>
  <SubmitBtn>1</SubmitBtn>
  <Inputs>
    <Label>Условие</Label>
    <Name>ConditionName</Name>
    <Type>2</Type>
  </Inputs>
</form>