<?xml version="1.0" encoding="utf-8"?>
<form>
  <AllowedCapability>u::CAPABILITY_AI_TASK_EDIT;,u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <FormID>add</FormID>
  <GroupID>ai_tasks</GroupID>
  <Label>Добавить задачу</Label>
  <Name>add</Name>
  <Redirect>/ai_tasks/edit/?id=@insTaskID;</Redirect>
  <SQL>INSERT INTO ai_tasks SET
    TaskName='@TaskName;',
    CreateUserID = '$auth-&gt;user;',
    TypeID = 1,
    CreateDate = now();

    ##set @insTaskID = 'DB::$insertedID;'
  </SQL>
  <SubmitBtn>1</SubmitBtn>
  <SuccessMsg>Успешно сохранено!</SuccessMsg>
  <Inputs>
    <Label>Название</Label>
    <Name>TaskName</Name>
    <Needed>1</Needed>
    <Type>2</Type>
  </Inputs>
</form>