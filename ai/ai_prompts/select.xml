<form>
  <AddBtn>add</AddBtn>
  <AllowedCapability>u::CAPABILITY_POST_DEVELOPMENT_DIRECTORS;</AllowedCapability>
  <AllowedUsersGroups>ag::admin;</AllowedUsersGroups>
  <DropBtn>delete</DropBtn>
  <EditBtn>edit</EditBtn>
  <FormID>select</FormID>
  <GroupID>ai_prompts</GroupID>
  <Label>Стандартные промпты</Label>
  <Menu_item>1</Menu_item>
  <Name>select</Name>
  <PerPage>100</PerPage>
  <SQLselect>SELECT 
  PromptID,
  PromptName,
  PromptText,
  IF (active, 'Да', 'Нет') AS Active
FROM ai_prompts
ORDER BY active, PromptName</SQLselect>
  <Inputs>
    <Label>Название</Label>
    <Name>PromptName</Name>
    <Type>2</Type>
  </Inputs>
  <Inputs>
    <Label>Контекст</Label>
    <Name>PromptText</Name>
    <Type>2</Type>
  </Inputs>
  <Inputs>
    <Label>Активна</Label>
    <Name>Active</Name>
    <Type>2</Type>
  </Inputs>
</form>
